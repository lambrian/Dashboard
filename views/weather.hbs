<div class="weather">
  <div class="slant-tl"></div>
  <div class="slant-tl-cover"></div>
  <div class="slant-br"></div>
  <div class="slant-br-cover"></div>
  <p class="city-name">{{name}}</p>
  {{!-- <p class="coord">{{coord.lon}} , {{coord.lat}}</p> --}}
  <p class="temp"> {{main.temp}} <span class="symbol"> &deg; </span>F</p>
  <p class="status"> Status: {{weather.0.main}}</p>
  <p class="humidity"> Humidity: {{main.humidity}}</p>
  <ul class="icons">
    {{#each icons}}
    <li>
      <div class="icon-square {{this}}">
        <div class="{{@key}}"></div>
      </div>
  </li>
    {{/each}}  
  </ul>
{{!-- 
Sun
Cloud
Rain
Wind --}}

</div>